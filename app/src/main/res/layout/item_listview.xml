<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/danlvse"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/item_name"
            style="@style/item_textview_style"
            android:text="姓名"/>
        <TextView
            android:id="@+id/item_cardtype"
            style="@style/item_textview_style"
            android:text="卡类型"/>
        <TextView
            android:id="@+id/item_fakaren"
            style="@style/item_textview_style"
            android:text="发卡人"/>
        <TextView
            android:id="@+id/item_start_time"
            style="@style/item_textview_style"
            android:text="发卡时间"/>
        <TextView
            android:id="@+id/item_end_time"
            style="@style/item_textview_style"
            android:text="到期时间"/>
        <TextView
            android:id="@+id/item_cardno"
            style="@style/item_textview_style"
            android:text="卡号"/>

        <TextView
            android:id="@+id/item_using_status"
            style="@style/item_textview_style"
            android:text="状态"/>
        <TextView
            android:id="@+id/item_comment"
            style="@style/item_textview_style"
            android:text="备注"/>

    </LinearLayout>


</LinearLayout>
